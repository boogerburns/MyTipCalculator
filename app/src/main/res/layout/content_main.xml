<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="booger.dontsueme.mytipcalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonCompute"
        android:id="@+id/calculateButton"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/billAmountUser"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/calculateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billAmountText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/billAmountUser"
        android:text="@string/checkAmountValue"
        android:layout_alignBottom="@+id/billAmountUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="@string/partySizeValue"
        android:layout_below="@+id/billAmountUser"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/partySizeUser"
        android:editable="true"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="@string/tipValue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:text="@string/TotalValue"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:text="@string/fifteenPercentTipValue"
        android:layout_alignTop="@+id/editText3"
        android:layout_toEndOf="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:text="@string/twentyPercentTipValue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:text="@string/twentyfivePercentTipValue"
        android:layout_above="@+id/editText4"
        android:layout_toEndOf="@+id/calculateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:text="@string/fifteenPercentTotalValue"
        android:layout_alignBottom="@+id/editText4"
        android:layout_toEndOf="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:text="@string/twentyPercentTotalValue"
        android:layout_alignBottom="@+id/editText8"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:text="@string/twentyfivePercentTotalValue"
        android:layout_alignBottom="@+id/editText9"
        android:layout_alignStart="@+id/editText7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fifteenOutTipText"
        android:layout_above="@+id/editText8"
        android:layout_alignStart="@+id/partySizeUser"
        android:layout_alignTop="@+id/editText5"
        android:layout_toStartOf="@+id/editText6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/twentyOutTipText"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/calculateButton"
        android:layout_toEndOf="@+id/editText6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/twentyfiveOutTipText"
        android:layout_alignBottom="@+id/twentyOutTipText"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fifteenOutTotalText"
        android:layout_alignBottom="@+id/editText8"
        android:layout_alignStart="@+id/fifteenOutTipText"
        android:layout_toStartOf="@+id/editText9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/twentyOutTotalText"
        android:layout_alignTop="@+id/fifteenOutTotalText"
        android:layout_alignEnd="@+id/twentyOutTipText"
        android:layout_toEndOf="@+id/editText9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/twentyfiveOutTotalText"
        android:layout_alignTop="@+id/twentyOutTotalText"
        android:layout_alignEnd="@+id/twentyfiveOutTipText"
        android:layout_toEndOf="@+id/editText10" />

</RelativeLayout>
